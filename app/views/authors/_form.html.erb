<%= simple_form_for([@publication,@author]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :publication_id, as: :hidden %>
    <%= f.input :person_id, as: :hidden %>

    <%= f.fields_for :person do |au| %>
      <%= render 'people/person_fields', au: au %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
