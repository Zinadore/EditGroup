<%= form_tag publications_path, method: "get", class: "default-publication-form animated bounceOutRight", id:"searchCollapse" do %>
  <div class="form-group">
      <label for="keyword">Keyword</label>
      <%= text_field_tag :keyword, params[:keyword], class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      <%= text_field_tag :author, params[:author], class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="year">Year</label>
      <%= select_tag :year, options_for_select((2001..Date.today.year + 5).to_a, params[:year]), :include_blank => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= button_tag type: 'submit', class: "btn btn-primary", name: nil do %>
        Go
      <% end %>
    </div>
<% end %>
