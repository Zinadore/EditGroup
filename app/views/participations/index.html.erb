<p id="notice"><%= notice %></p>

<h1>Project <%= @project.title %></h1>

<h2>Participants</h2>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Administrative title</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participations.each do |participation| %>
      <tr>
        <td><%= participation.person.firstName %></td>
        <td><%= participation.person.lastName %></td>
        <td><%= participation.participant.administrative_title %></td>
        <td><%= participation.participant.email %></td>
        <td><%= link_to 'Show', project_participation_path(@project,participation),action: :index %></td>
        <td><%= link_to 'Edit', edit_project_participation_path(@project,participation) %></td>
        <td><%= link_to 'Destroy', project_participation_path(@project,participation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Participation', new_project_participation_path(@project) %>
