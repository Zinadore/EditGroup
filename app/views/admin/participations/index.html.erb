<div class="row">
  <div class="col-md-10">
    <h1>"<%= @project.title %>" Participants</h1>
  </div>
  <div class="col-md-2">
    <div class="allNewButtons">
      <div class="btn-group">
        <%= link_to ("<i class='fa fa-plus'></i> Add Participant <span class='caret'></span>").html_safe, "#",
                    class: "btn btn-success dropdown-toggle",
                    data: { toggle: "dropdown" }, aria: {haspopup: true, expanded: false} %>
        <ul class="dropdown-menu .pull-center">
          <li>
            <%= link_to ("<i class='fa fa-plus'></i> Create New Participant").html_safe, new_admin_project_participation_path,
                        remote: true, class: "btn btn-success", id: "newBtn", onclick: 'newButtonPressed("Participant")'  %>
          </li>
          <li>
            <%= link_to ("Add From Database").html_safe, admin_project_new_from_db_path,
                        remote: true, class: "btn btn-success", id: "newBtn", onclick: 'newButtonPressed("Participant")' %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>



<div class="x_panel" id="all_content">


  <div class="table-responsive">
    <table class="table table-striped table-bordered dt-responsive nowrap" id="participations-table" data-source="<%= admin_project_participations_path(format: :json) %>"
           data-default_sort_column="2" data-default_sort_direction="asc">
      <thead>
      <tr>
        <th>Title</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Administrative Title</th>
        <th>Email</th>
        <th data-orderable="false" class="editColumnHeader"></th>
        <th data-orderable="false" class="removeFromProjectColumnHeader"></th>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>


  <!-- Modal -->
  <div class="modal fade" id="select2_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel"></h4>
        </div>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="saveModalBtn">Save changes</button>
        </div>
      </div>
    </div>
  </div>

</div>
