<h1>Site Preferences</h1>

<div class="x_panel" id="all_content">

  <div class="preference_div">
    <h2>Citation Style <small style="margin-left: 10px">Choose the citation style for the publications</small></h2>

    <hr>

    <%= simple_form_for(@citation_style, url: admin_preferences_update_path, remote: true) do |f| %>
      <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token"/>
      <%= f.input :id, as: :hidden %>
      <div class="row">
        <div class="col-md-2">
          Style:
        </div>

        <div class="col-md-2">
          <%= select_tag :value, options_for_select(@styles, all_styles[@citation_style.value]), class: "citations_select2", style: "width: 100%;", label: "Style" %>
        </div>
      </div>
    <% end %>

  </div>

  <div class="preference_div">

    <h2>Show Timeline In Publications <small style="margin-left: 10px">Choose how publications will appear in the main site</small></h2>

    <hr>

    <%= simple_form_for(@publication_display, url: admin_preferences_update_path, remote: true) do |f| %>
      <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token"/>
      <%= f.input :id, as: :hidden %>
      <div class="row">
        <div class="col-md-2">
          Show Publications as timeline:
        </div>

        <div class="col-md-2">
          <%= select_tag :value, options_for_select(@timeline_values, @publication_display.value), class: "citations_select2", style: "width: 100%;", label: "Style" %>
        </div>
      </div>
    <% end %>

  </div>

  <div class="preference_div">

    <h2>Pagination Preferences <small style="margin-left: 10px">Choose number of pages</small></h2>

    <hr>

    <%= simple_form_for(@pagination_publications, url: admin_preferences_update_path, remote: true) do |f| %>
      <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token"/>
      <%= f.input :id, as: :hidden %>
      <div class="preferences-row">
        <div class="col-md-2">
          # of pages for Publications:
        </div>

        <div class="col-md-2">
          <%= select_tag :value, options_for_select(@pagination_publications_values, @pagination_publications.value.to_i), class: "citations_select2", style: "width: 100%;", label: "Style" %>
        </div>
      </div>
    <% end %>

    <%= simple_form_for(@pagination_news, url: admin_preferences_update_path, remote: true) do |f| %>
      <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token"/>
      <%= f.input :id, as: :hidden %>
      <div class="preferences-row">
        <div class="col-md-2">
          # of pages for News-Events:
        </div>

        <div class="col-md-2">
          <%= select_tag :value, options_for_select(@pagination_news_values, @pagination_news.value.to_i), class: "citations_select2", style: "width: 100%;", label: "Style" %>
        </div>
      </div>
    <% end %>

    <%= simple_form_for(@pagination_projects, url: admin_preferences_update_path, remote: true) do |f| %>
      <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token"/>
      <%= f.input :id, as: :hidden %>
      <div class="preferences-row">
        <div class="col-md-2">
          # of pages for Projects:
        </div>

        <div class="col-md-2">
          <%= select_tag :value, options_for_select(@pagination_projects_values, @pagination_projects.value.to_i), class: "citations_select2", style: "width: 100%;", label: "Style" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
