          <%= image_tag current_member.avatar.url, class: "img-circle profile_img" %>
        <% else %>
            <div class="img-circle profile_img"><i class="fa fa-user" aria-hidden="true" style="font-size: 45px; padding-left: 5px"></i></div>
        <% end %>

      </div>
      <div class="profile_info" style="margin-bottom: 30px">
        <span>Welcome,</span>
        <h2> <%= "#{current_member.firstName} #{current_member.lastName}" %> </h2>
      </div>
    </div>
    <!-- /menu prile quick info -->

    <br/>

    <!-- sidebar menu -->
    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

