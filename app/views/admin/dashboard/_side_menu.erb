            <a><i class="fa fa-users"></i> Members <span class="fa fa-chevron-down"></span></a>
            <ul class="nav child_menu" style="display: none">
              <li>
                <%= link_to admin_members_path do %>
                    <i class="fa fa-users fa-fw"></i> All Members <span class="fa"></span>
                <% end %>
              </li>
              <li>
                <%= link_to admin_members_invites_index_path do %>
                    <i class="fa fa-envelope-square fa-fw" aria-hidden="true"></i> Invitations<span class="fa"></span>
                <% end %>
              </li>
              <li>
                <%= link_to admin_website_templates_path do %>
