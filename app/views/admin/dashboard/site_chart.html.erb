<div class="row">
  <div class="col-md-10">
    <h1>Site Charts</h1>
  </div>
</div>

<div class="x_panel" id="all_content">


  <% unless @visits.empty? %>
    <%= high_chart_globals(@chart_globals) %>
    <div class="row tile_count" style="text-align:center;">
        <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count" >
            <span class="count_top"><i class="fa fa-mouse-pointer"></i> Total Visits </span>
            <div class="count" style="font-size: 16pt; line-height:30px; text-align: center;"><%= @visit_sum %></div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count" >
            <span class="count_top"><i class="fa fa-mouse-pointer"></i>Last Visit</span>
            <div class="count" style="font-size: 16pt; line-height:30px;">
                <% @v = @visits.last.started_at%>
                <%= @v.strftime('%Y/%b/%d') %>
                <br>
                <%= @v.strftime('%H:%M') %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6"style=" height:350px;">
            <%= high_chart("browser_pie",@browser_pie) do |c| %>
              <%= raw "options.tooltip.formatter = function() {return  this.point.name +'</b>: '+ this.y +' %';}"  %>
            <% end %>
        </div>

        <div class="col-lg-6"style=" height:350px;">
            <%= high_chart("os_pie",@os_pie) do |c| %>
              <%= raw "options.tooltip.formatter = function() {return  this.point.name +'</b>: '+ this.y +' %';}"  %>
            <% end %>
        </div>

    </div>
    <div class = "row">
        <div class="col-lg-12" id="line_cont" style=" height:350px; width:100%; ">
            <%= high_chart("visits_line", @visits_line_month) %>
        </div>
    </div>

    <div class = "row">
        <table class="table table-hover">
            <thead>
                <tr>
                </tr>
            </thead>
        </table>
    </div>
  <% else %>
  NO

  <% end %>


</div>
