<div class="nested-fields website-entry">
  <div class="form-group">

    <%= f.fields_for :personal_websites do |w| %>

        <div class="logo">
          <%= w.association :website_template, label_method: :website_name,value_method: :id, prompt: "Choose website name", validate: true, error: false, label:"Websites"%>
          <span class='help-block client_side_error' id="<%= "#{w.object_name}[website_template_id]" %>"></span>
        </div>

        <div class="url">
          <%= w.input :url, label: 'URL', validate: true, error: false %>
          <span class='help-block client_side_error' id="<%= "#{w.object_name}[url]" %>"></span>
        </div>

        <div class="remove">
          <%= link_to_remove_association ("<i class='fa fa-times' aria-hidden='true' style='margin-top:32px; color:#ff0000;'></i>").html_safe, w %>
        </div>
    <% end %>
  </div>
</div>
