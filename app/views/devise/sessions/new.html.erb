<div style="padding-left: 500px; padding-right: 500px; padding-top: 200px" >


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "form_main" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" , class: "btn btn-info", style: "margin-left: 41%; margin-right: 41%" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
